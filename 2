#include <stdio.h>

//Создаем функцию, удовлетворяющюю условиям задания
int sign(float x) 
{
    if (x < 0)
    return -1;
    if (x == 0)
    return 0;
    if (x > 0)
    return 1;
}

int main(void)
{
    //Объявляем переменные и ввод для пользователя
    float a, b; 
    printf("A:");
    scanf_s("%f", &a);
    printf("B:");
    scanf_s("%f", &b);
    printf("Sign(A)+Sign(B):%i\n", sign(a) + sign(b)); //Выводим результат
    return 0; //Выход
}
